# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# ChromaDB Configuration
# Leave CHROMA_HOST empty for local ChromaDB instance
CHROMA_HOST=
CHROMA_PORT=8000
CHROMA_SSL=false

# Optional: ChromaDB Authentication
# CHROMA_AUTH_TOKEN=your_auth_token_here

# Example for remote ChromaDB:
# CHROMA_HOST=your-chroma-server.com
# CHROMA_PORT=8000
# CHROMA_SSL=true
# CHROMA_AUTH_TOKEN=your_token_here